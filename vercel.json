{
  "version": 2,
  "builds": [
    {
      "src": "packages/api/upload.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/api/delete-file.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/admin/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" },
      "buildCommand": "npm run build"
    },
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" },
      "buildCommand": "npm run build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/api/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/packages/admin/dist/$1"
    },
    {
      "src": "/admin",
      "dest": "/packages/admin/dist/index.html"
    },
    {
      "src": "/",
      "dest": "/packages/frontend/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/frontend/dist/$1"
    }
  ]
}
